<?xml version="1.0" encoding="utf-8"?>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"


    android:id="@+id/questMap"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestMapActivity" >

    <RelativeLayout tools:ignore="ExtraText"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="30dp"
            android:text="Старт"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnStart"
            android:layout_centerHorizontal="true"
            android:text="Стоп" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btnStop"
            android:layout_marginEnd="32dp"
            android:text="Сброс"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp" />
      <Button
            android:id="@+id/imhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:text="Я на месте! (неправильно)" />
      
        <Button
            android:id="@+id/imhere2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imhere"
            android:layout_marginBottom="23dp"
            android:text="Я на месте! (правильно)" />
      
        <Button
            android:id="@+id/buttonToQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="..." />
        <Button
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/buttonToQuestion"
            android:text="подсказка"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="112dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="93dp"
            android:text="0:00:00"
            android:textSize="30sp"/>

        <!--<fragment
            android:id="@+id/fragment_fragmentright"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <fragment
            android:id="@+id/fragment_fragmentnotright"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />-->

    </RelativeLayout>

</fragment>
